    script(src='./js/global.min.js')
    script(async src='./js/index.min.js')
  body
    .pg_content
      h1.kr.title(onclick="clearSearch()")
        span.ll_brand LoveLive!
        |  Call Table
      input#search_box.kr(type='text', name='search', onkeyup='searchFiltering(this.value)', aria-label='악곡 제목 필터링' placeholder='악곡 제목 or 약자')
      button.btn_gap(onclick="searchFiltering(document.getElementById('search_box').value)") 검색
      br
      br
      .options
        label.ckbox
          | 번역된 제목으로 보기
          input#showAs_translated(type='checkbox', checked='none', onclick='changedOption(0)')
          span.checkmark
        label.ckbox
          | 배경 이미지 숨기기
          input#hideBGImage(type='checkbox', checked='none', onclick='changedOption(1)')
          span.checkmark
        label.ckbox
          | 다크모드 활성화
          input#enable_darkMode(type='checkbox', checked='none', onclick='changedOption(2)')
          span.checkmark
      br
      #search_rest.search_results
        h1.kr.ooki 검색 결과가 없습니다.
    p.centerize
      a(href='https://gall.dcinside.com/sunshine/')  Love Live! Call Table by 러브라이브! 선샤인!! 마이너 갤러리
      |          ・ 
      a(href='https://github.com/So-chiru/LLCT') Github
    .pswp(tabindex='-1', role='dialog', aria-hidden='true')
      .pswp__bg
      .pswp__scroll-wrap
        .pswp__container
          .pswp__item
          .pswp__item
          .pswp__item
        .pswp__ui.pswp__ui--hidden
          .pswp__top-bar
            .pswp__counter
            button.pswp__button.pswp__button--close(title='닫기 (Esc)')
            button.pswp__button.pswp__button--fs(title='전체 화면')
            button.pswp__button.pswp__button--zoom(title='확대')
            .pswp__preloader
              .pswp__preloader__icn
                .pswp__preloader__cut
                  .pswp__preloader__donut
          .pswp__caption
            .pswp__caption__center
